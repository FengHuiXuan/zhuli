/* pages/comment/comment.wxss */
page{
  background: #f4f4f4;
}
.comment_box_head{
  padding: 25rpx;
  background: #fff;
  display: flex;
  flex-wrap:nowrap;
}
.comment_box_head>image{
  width: 120rpx;
  height: 120rpx;
}
.comment_box_head_center{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 23rpx;
  flex: 1;
}
.comment_box_head_center1{
  font-size: 28rpx;
  color: #000;
}
.comment_box_head_center2{
  font-size: 24rpx;
  color: #a3a3a3;
}
.comment_box_head_center3{
  font-size: 28rpx;
  color: #ee9058;
}
.comment_box_head_right{
  display: flex;
  align-items: center;
  font-size:30rpx;
  color: #000 
}
.comment_box_{
  padding: 43rpx 58rpx ;
  box-sizing: border-box
}
.comment_box_textarea{
  width: 100%;
  height: 510rpx;
  background: #fff;
  border: 1px solid #ccc;
  padding: 25rpx 20rpx;
  box-sizing: border-box
}
.comment_box_textarea>textarea{
  width: 100%;
  height: 100%;
  font-size: 25rpx;
  color: #919191;
  box-sizing: border-box
}
.comment_box_img{
  margin-top: 25rpx;
  display: flex;
  flex-wrap: wrap;
}
.comment_box_img>view{
 flex:0 0 33.3%;
 display: flex;
 
}
.comment_box_img>view>view{
position: relative;
}
.comment_box_img>view:nth-child(3n-2){
  justify-content: flex-start;
}
.comment_box_img>view:nth-child(3n-1){
  justify-content: center;
}
.comment_box_img>view:nth-child(3n){
  justify-content:flex-end;
}
.comment_box_image, .comment_box_imgadd{
  width: 120rpx;
  height: 120rpx;
}
.comment_box_btn{
  margin-top: 80rpx;
}
.comment_box_close{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  background: #000;
  right: 0;
  top: 0
}
.comment_box_btn>button{
  background: #ee9058;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  vertical-align: top;
}
