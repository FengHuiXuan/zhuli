/* pages/orderList/orderList.wxss */
.orderList_tabbar{
  width: 100%;
  height: 94rpx;
  background: #000;
  display: flex;
  justify-content: space-around;
}
.orderList_tabbar_li{
  color: #fff;
  font-size: 25rpx;
  line-height: 92rpx;
  height: 92;
  text-align: center
}
/* .orderList_tabbar .orderList_tabbar_li_active{
   color: #ee9058;
   border-bottom: 2rpx solid #ee9058
} */
.orderList_tabbar_li_text2{
  display: flex;
  justify-content: center;
  height: 2rpx;
}
.orderList_tabbar .orderList_tabbar_li_active{
   color: #ee9058;
} 
.orderList_tabbar_li_active .orderList_tabbar_li_text2>view{
  background: #ee9058;
}
.orderList_tabbar_li_text2>view{
  width: 14rpx;
  height: 2rpx;
}
.orderList_tabbar_li_text{
  line-height: 90rpx;
  white-space:nowrap;
}

.orderList_neir{
 
} 
.orderList_neir_li{
  border-top: 10rpx solid #f4f4f4;
}
.orderList_number{
  padding: 30rpx 26rpx;
  display: flex;
  font-size: 24rpx;
  color: #666;
}
.orderList_number_{
  flex: 1
}
.orderList_number>text{
  color: #ee9058
}
.orderList_commodity{
  display: flex;
  flex-wrap:nowrap; 
  background: #fafafa;
  padding: 20rpx 26rpx
}
.orderList_commodity_img{
  width: 80rpx;
  height: 80rpx;
}
.orderList_commodity_particulars{
  flex: 1;
  margin-left: 26rpx;
  height: 80rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}
.orderList_commodity_particulars1{
  font-size: 25rpx;
  color: #000;
  font-weight: bold;
}
.orderList_commodity_particulars2{
  font-size: 20rpx;
  color: #a9a9a9;

}
.orderList_commodity_price{
  font-size:23rpx;
  color: #000;
  display: flex;
  padding-top:12rpx 
}
.orderList_btn{
  padding: 20rpx 26rpx;
  display: flex;
  flex-wrap: nowrap;
}
.orderList_btn>view{
  flex: 1
}
.orderList_btn>text{
  height: 45rpx;
  width: 120rpx;
  font-size: 22rpx;
  line-height: 45rpx;
  text-align: center;
  background: none;
  color: #000;
  border: 1rpx solid #e5e5e5;
  border-radius:4rpx;
  margin-left:15rpx;
}
.orderList_btn>text:last-of-type{
  color: #ee9058;
  border: 1px solid #ee9058;
}

.orderList_pup{
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  background: rgba(0,0,0,.6);
  display: flex;
  align-items: center;
  justify-content: center;
}
.orderList_kuang{
  position: relative;
  width: 560rpx;
  box-sizing: border-box
}
.orderList_kuang_close{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right:-10rpx;
  top: -50rpx;
}
.orderList_kuang_yard{
  padding-top:10rpx;
  padding-bottom:30rpx;  
  border-bottom: 1px dashed #444343;
  display: flex;
  flex-wrap: nowrap;
}
.orderList_kuang_head{
  background:#2c2b2b;
  padding: 40rpx;
}
.orderList_kuang_yard>view{
  font-size: 30rpx;
  color: #fff;
  vertical-align: top;
  flex: 1;
}
.orderList_kuang_yard>image{
  height: 30rpx;
  width: 157rpx;
}
.orderList_kuang_phone{
  margin-top: 30rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 60rpx;
  color: #ee9058
}
.orderList_kuang_time{
  text-align: center;
  font-size: 20rpx;
  color: #fff
}
.orderList_kuang_body{
  background: #fff;
  padding: 40rpx;
  max-height:440rpx;
  box-sizing: border-box;
}
.orderList_kuang_body_scroll-view{
  max-height: 360rpx;
  width: 480rpx
}
.orderList_kuang_body_li{
  padding: 0 20rpx;
  font-size:22rpx;
  color: #000;
  line-height: 60rpx; 
  display: flex;
  justify-content: space-between
}
.orderList_kuang_body_none{
  color: #666;
  font-size: 26rpx;
  text-align: center
}